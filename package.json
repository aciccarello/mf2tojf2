{
  "name": "@paulrobertlloyd/mf2tojf2",
  "version": "0.3.0",
  "description": "Convert MF2 to JF2",
  "keywords": [
    "microformats",
    "mf2",
    "jf2"
  ],
  "homepage": "https://github.com/paulrobertlloyd/mf2tojf2#readme",
  "author": {
    "name": "Paul Robert Lloyd",
    "url": "https://paulrobertlloyd.com"
  },
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "type": "module",
  "main": "index.js",
  "files": [
    "lib",
    "index.js"
  ],
  "bugs": "https://github.com/paulrobertlloyd/mf2tojf2/issues",
  "repository": "git://github.com/paulrobertlloyd/mf2tojf2.git",
  "scripts": {
    "lint": "xo",
    "test": "ava",
    "coverage": "c8 ava"
  },
  "dependencies": {
    "got": "^11.8.1",
    "microformats-parser": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "ava": "^3.14.0",
    "c8": "^7.3.5",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.9",
    "husky": "^4.3.6",
    "nock": "^13.0.5",
    "xo": "^0.33.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "verbose": true
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "xo": {
    "space": true,
    "extends": [
      "plugin:import/errors",
      "plugin:jsdoc/recommended"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "always"
      ],
      "import/no-useless-path-segments": [
        "error",
        {
          "noUselessIndex": false
        }
      ],
      "unicorn/import-index": [
        "error",
        {
          "ignoreImports": true
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js"
          ]
        }
      }
    }
  }
}
